{
  "schema": {
    "tables": [
      {
        "name": "employees",
        "role": "flat",
        "grain": "one row per employee",
        "columns": {
          "employee_id": "INTEGER - Unique employee identifier (Primary Key)",
          "first_name": "VARCHAR - Employee first name",
          "last_name": "VARCHAR - Employee last name",
          "email": "VARCHAR - Employee email address",
          "department": "VARCHAR - Department (IT, HR, Forschung, Marketing)",
          "position": "VARCHAR - Job position",
          "hire_date": "DATE - Hire date",
          "salary": "NUMERIC - Annual salary in EUR",
          "manager_id": "INTEGER - Manager ID (can be NULL)",
          "location": "VARCHAR - Office location (Bonn, Köln)"
        },
        "primary_key": "employee_id"
      }
    ],
    "relationships": [],
    "metrics": {
      "total_employees": {
        "formula": "COUNT(*)",
        "description": "Total number of employees",
        "keywords": ["anzahl", "mitarbeiter", "employees", "total", "wie viele", "count"]
      },
      "average_salary": {
        "formula": "AVG(salary)",
        "description": "Average employee salary",
        "keywords": ["durchschnitt", "durchschnittlich", "gehalt", "average", "salary", "mean"]
      },
      "total_salary": {
        "formula": "SUM(salary)",
        "description": "Total salary cost",
        "keywords": ["gesamt", "gesamtgehalt", "summe", "lohnkosten", "total salary", "sum"]
      }
    },
    "glossary": {
      "salary": "Annual salary in EUR",
      "department": "IT, HR, Forschung, Marketing",
      "location": "Bonn or Köln"
    }
  }
}
